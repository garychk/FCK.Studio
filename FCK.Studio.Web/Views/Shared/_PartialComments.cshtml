@model FCK.Studio.Dto.CommentsJson
@if (Model.datas.Count > 0)
{
    <table class="table table-hover fck-comment-list">
        @foreach (var item in Model.datas)
        {
            <tr>
                <td style="width: 80px">
                    <img src="/Content/img/blank.gif" data-original="@item.Member_Header" class="img-circle lazy">
                </td>
                <td>
                    <p>@Html.Raw(item.Comment_Contents)</p>
                    @if (ViewData["style"].ToString() == "detail")
                    {
                        <p class="color9">
                            <small><span class="glyphicon glyphicon-tag"></span>&nbsp;@item.Member_NickName
                                <span class="glyphicon glyphicon-time"></span>&nbsp;@item.Comment_Times
                            </small>
                        </p>
                    }
                    else
                    {
                        <p class="color9">
                            <small><span class="glyphicon glyphicon-time"></span>&nbsp;@item.Comment_Times</small>
                        </p>
                    }
                </td>
                @if (ViewData["style"].ToString() == "detail")
                {
                    <td class="text-right">
                        <button class="btn btn-danger" onclick="Ok(@item.Comment_ID,1)"><span class="glyphicon glyphicon-thumbs-up"></span>@item.Comment_Good</button>
                        <button class="btn btn-default" onclick="Ok(@item.Comment_ID,0)"><span class="glyphicon glyphicon-thumbs-down"></span>@item.Comment_Bad</button>
                    </td>
                }
            </tr>
        }
    </table>
}
else
{
    <p class="text-center">暂无评论</p>
}
