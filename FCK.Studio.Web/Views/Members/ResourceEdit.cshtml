@model FCK.Studio.Dto.ArticleDto
@using FCK.Common
@{
    ViewBag.Title = "ResourceEdit";
    Layout = "~/Views/Shared/_LayoutMemberRgt.cshtml";
}
<div class="panel panel-default">
    <div class="panel-body">
        <div class="fck-title"><span>添加或更新资源</span></div>
        <form class="form-horizontal" name="FormEditResource" id="FormEditResource">
            <div class="form-group">
                <label for="Article_CateID" class="col-sm-2 control-label">分类</label>
                <div class="col-sm-6">
                    <input type="text" id="Article_CateID" name="Article_CateID" value="@Model.Article_CateID" class="hide" />
                    <div class="btn-group">
                        <button type="button" class="btn btn-info" id="NodeText">@(Model.Article_CateName == null?"请选择":Model.Article_CateName)</button>
                        <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu" style="min-width: 240px">
                            <div id="ResourceCategory" style="max-height:240px;overflow:auto;"></div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-2"></div>
            </div>
            <div class="form-group">
                <label for="Article_Title" class="col-sm-2 control-label">资源名称</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" placeholder="文章标题" id="Article_Title" name="Article_Title" value="@Model.Article_Title">
                </div>
            </div>
            <div class="form-group">
                <label for="Article_Brief" class="col-sm-2 control-label">资源概述</label>
                <div class="col-sm-6">
                    <textarea class="form-control" placeholder="文章简介" id="Article_Brief" name="Article_Brief">@Model.Article_Brief</textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="Product_Pic" class="col-sm-2 control-label">资源预览图</label>
                <div class="col-sm-6">
                    <input type="hidden" name="Article_Pic" id="Article_Pic" value="@Model.Article_Pic">
                    <a href="javascript:void(0)" class="btn btn-info UploadImg" data-pic="Article_Pic"><i class="glyphicon glyphicon-upload"></i>上传图片</a>
                    @if (Model.Article_ID > 0)
                    {
                        <img id="Article_Pic_Pre" height="35" src="@Utility.ImgServer@(Model.Article_Pic)" />}
                </div>
            </div>
            <div class="form-group">
                <label for="Article_Contents" class="col-sm-2 control-label">资源描述</label>
                <div class="col-sm-7">
                    <textarea class="form-control" id="Article_Contents" name="Article_Contents" rows="10">@Model.Article_Contents</textarea>
                </div>
            </div>

            <div class="form-group">
                <label for="Article_NavUrl" class="col-sm-2 control-label">资源下载链接</label>
                <div class="col-sm-1">
                    <a href="javascript:void(0)" class="btn btn-success UploadFile" data-url="Article_NavUrl"><i class="glyphicon glyphicon-upload"></i>上传资源</a>
                </div>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="Article_NavUrl" name="Article_NavUrl" value="@Model.Article_NavUrl">
                </div>
            </div>
            <div class="form-group">
                <label for="Article_Point" class="col-sm-2 control-label">资源分</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" placeholder="http://" id="Article_Point" name="Article_Point" value="@Model.Article_Point">
                </div>
            </div>
            <div class="form-group">
                <label for="Article_Tag" class="col-sm-2 control-label">标签</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" placeholder="" id="Article_Tag" name="Article_Tag" value="@Model.Article_Tag"  data-toggle="popover"  data-trigger="focus" data-placement="top" data-content="多个标签可以使用英文“,”或者中文“，”隔开">
                </div>
            </div>
            <div class="form-group">
                <label for="Article_OrderID" class="col-sm-2 control-label">序号</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" placeholder="序号" id="Article_OrderID" name="Article_OrderID" value="@Model.Article_OrderID">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="hidden" id="Article_ID" name="Article_ID" value="@Model.Article_ID" />
                    <input type="hidden" id="Article_MemberID" name="Article_MemberID" value="@Model.Article_MemberID" />
                    <input type="hidden" id="Article_Collections" name="Article_Collections" value="@Model.Article_Collections" />
                    <input type="hidden" id="Article_Comments" name="Article_Comments" value="@Model.Article_Comments" />
                    <input type="hidden" id="Article_Hits" name="Article_Hits" value="@Model.Article_Hits" />
                    <input type="hidden" id="Article_UpdateTime" name="Article_UpdateTime" value="@Model.Article_UpdateTime" />
                    <button type="submit" class="btn btn-success">确定</button>
                    <a href="/Members/Resources" class="btn btn-default">返回</a>
                </div>
            </div>
        </form>
    </div>
</div>
