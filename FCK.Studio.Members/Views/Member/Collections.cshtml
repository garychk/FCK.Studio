@model FCK.Studio.Dto.CollectionsJson
@{
    ViewBag.Title = "我的收藏";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}
<div class="list-group">
    @{
        if (Model.total > 0)
        {
            foreach (var item in Model.datas)
            {
                <div class="list-group-item">
                <div class="row">
                        <div class="col-md-3 col-xs-3">
                            <a href="/Products/Detail/@item.Product_ID">
                                @{
                                    if (!string.IsNullOrEmpty(item.Product_Pic))
                                    {
                                        <img src="@(FCK.Config.ImgServer)@(item.Product_Pic)" class="img-responsive">
                                    }
                                    else
                                    {
                                        <img src="/Content/img/blank.png" class="img-responsive">
                                    }
                                }
                            </a>
                        </div>
                        <div class="col-md-9 col-xs-9">
                            <p class="list-group-item-heading"><a href="/Products/Detail/@item.Product_ID">@(item.Product_Name)</a></p>
                            <p>
                                <span class="text-danger"><i class="iconfont icon-money"></i>@(item.Product_Price)</span>
                            </p>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="list-group-item">暂无信息</div>
        }
    }

</div>
